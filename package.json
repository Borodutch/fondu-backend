  "author": "backmeupplz <backmeupplz@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "distribute": "yarn build-ts && node dist/server.js",
    "develop": "concurrently -i -k -p \"[{name}]\" -n \"Node,TypeScript\" -c \"yellow.bold,cyan.bold\" \"yarn watch-js\" \"yarn watch-ts\"",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/server.js",
    "test": "yarn jest --forceExit",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@koa/cors": "^3.1.0",
    "@typegoose/typegoose": "^7.6.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.13.1",
    "@types/lodash": "^4.14.168",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^15.6.1",
    "concurrently": "^6.0.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "2.5.1",
    "@types/koa-bodyparser": "^4.3.0",
    "amala": "^5.1.2",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "handlebars": "^4.7.7",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "5.10.18",
    "nanoid": "^3.1.23",
    "typescript": "^4.2.3"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
